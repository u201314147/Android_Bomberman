<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".Activities.WSAndControlActivity">

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="SALA 1"
        android:id="@+id/txt_room"></TextView>

    <ImageButton
        android:id="@+id/ib_up"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="20dp"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:padding="8dp"
        android:src="@drawable/arrow_up"
        android:layout_marginEnd="94dp"
        app:layout_constraintBottom_toTopOf="@id/v_left"
        app:layout_constraintEnd_toEndOf="@id/v_center"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageButton
        android:id="@+id/ib_left"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@android:color/transparent"
        android:padding="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/arrow_left"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/v_left"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ib_down"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="94dp"
        android:layout_marginTop="25dp"
        android:background="@android:color/transparent"
        android:padding="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/arrow_down"
        app:layout_constraintEnd_toEndOf="@id/v_center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_left" />

    <ImageButton
        android:id="@+id/ib_right"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@android:color/transparent"
        android:padding="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/arrow_right"
        android:layout_marginTop="5dp"
        android:layout_marginStart="42dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/v_left"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/v_left"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_marginEnd="95dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/v_center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_pause"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:padding="8dp"
        android:scaleType="fitXY"
        android:paddingStart="22dp"
        android:text="PAUSA"
        android:textColor="@android:color/white"
        android:layout_marginBottom="105dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/v_center"
        />
    <TextView
        android:id="@+id/txt_play"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:padding="8dp"
        android:scaleType="fitXY"
        android:paddingStart="24dp"
        android:text="START"
        android:textColor="@android:color/white"
        android:layout_marginBottom="105dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/v_center"
        />
    <ImageButton
        android:id="@+id/ib_pause"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:padding="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/button_select"
        android:layout_marginBottom="105dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/v_center"
        android:contentDescription="@string/pause" />
    <ImageButton
        android:id="@+id/ib_play"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:padding="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/button_select"
        android:layout_marginBottom="105dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/v_center"
        android:contentDescription="@string/pause" />


    <View
        android:id="@+id/v_center"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/v_right"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_marginStart="95dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/v_center"
        app:layout_constraintTop_toTopOf="parent" />



    <ImageButton
        android:id="@+id/ib_a"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="20dp"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:padding="8dp"
        android:src="@drawable/button_a"
        android:layout_marginStart="94dp"
        app:layout_constraintBottom_toTopOf="@id/v_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/v_center"/>

    <ImageButton
        android:id="@+id/ib_x"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@android:color/transparent"
        android:padding="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/button_x"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/v_right"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ib_y"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="94dp"
        android:layout_marginTop="25dp"
        android:background="@android:color/transparent"
        android:padding="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/button_y"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/v_center"
        app:layout_constraintTop_toBottomOf="@id/v_right" />

    <ImageButton
        android:id="@+id/ib_b"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@android:color/transparent"
        android:padding="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/button_b"
        android:layout_marginTop="5dp"
        android:layout_marginStart="42dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/v_right"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>