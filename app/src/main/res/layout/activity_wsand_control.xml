<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="32dp"
    android:layout_marginBottom="32dp"
    android:background="@drawable/play"
    tools:context=".Activities.WSAndControlActivity">

    <TextView
        android:id="@+id/txt_room"
        android:layout_width="294dp"
        android:layout_height="35dp"
        android:background="@drawable/style_edit_text"
        android:text="Nombre jugador    "
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <ImageButton
        android:id="@+id/ib_up"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="94dp"
        android:layout_marginBottom="32dp"
        android:alpha="0.0"
        android:background="@android:color/transparent"
        android:padding="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/arriba"
        app:layout_constraintBottom_toTopOf="@id/v_left"
        app:layout_constraintEnd_toEndOf="@id/v_center"
        app:layout_constraintHorizontal_bias="0.569"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/ib_left"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:alpha="0.0"
        android:background="@android:color/transparent"
        android:padding="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/izquierda"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/v_left"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.467" />

    <ImageButton
        android:id="@+id/ib_down"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="94dp"
        android:alpha="0.0"
        android:background="@android:color/transparent"
        android:padding="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/abajo"
        app:layout_constraintEnd_toEndOf="@id/v_center"
        app:layout_constraintHorizontal_bias="0.569"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_left" />

    <ImageButton
        android:id="@+id/ib_right"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="5dp"
        android:alpha="0.0"
        android:background="@android:color/transparent"
        android:padding="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/derecha"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/v_left"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.467" />

    <View
        android:id="@+id/v_left"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_marginEnd="95dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/v_center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ib_pause"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginBottom="204dp"
        android:alpha="0.0"
        android:background="@android:color/transparent"
        android:contentDescription="@string/pause"
        android:padding="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/btn_pause"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/v_center" />


    <ImageButton
        android:id="@+id/ib_play"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginBottom="204dp"
        android:alpha="0.0"
        android:background="@android:color/transparent"
        android:contentDescription="@string/pause"
        android:padding="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/btn_ready"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/v_center" />

    <View
        android:id="@+id/v_center"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/v_right"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_marginStart="95dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.37"
        app:layout_constraintStart_toStartOf="@id/v_center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.465" />

    <ImageButton
        android:id="@+id/ib_a"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_marginStart="104dp"
        android:layout_marginBottom="28dp"
        android:alpha="0.0"
        android:background="@android:color/transparent"
        android:padding="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/btn_x"
        app:layout_constraintBottom_toTopOf="@id/v_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.356"
        app:layout_constraintStart_toStartOf="@id/v_center" />

    <ImageButton
        android:id="@+id/ib_x"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="14dp"
        android:alpha="0.0"
        android:background="@android:color/transparent"
        android:padding="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/btn_y"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/v_right"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.425" />

    <ImageButton
        android:id="@+id/ib_y"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="50dp"
        android:alpha="0.0"
        android:background="@android:color/transparent"
        android:padding="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/btn_a"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.291"
        app:layout_constraintStart_toStartOf="@id/v_center"
        app:layout_constraintTop_toBottomOf="@id/v_right" />

    <ImageButton
        android:id="@+id/ib_b"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="35dp"
        android:alpha="0.0"
        android:background="@android:color/transparent"
        android:padding="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/btn_b"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/v_right"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.448" />

</android.support.constraint.ConstraintLayout>