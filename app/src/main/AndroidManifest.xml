<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.app.mg.aoe.upc">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CAMERA"/>

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name="com.app.mg.aoe.upc.MainActivity" />
        <activity
            android:name="com.app.mg.aoe.upc.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.app.mg.aoe.upc.Activities.WSAndControlActivity"
            android:screenOrientation="landscape"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name="com.app.mg.aoe.upc.Activities.ControlBActivity"
            android:screenOrientation="landscape"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name="com.app.mg.aoe.upc.Activities.ControlActivity"
            android:screenOrientation="portrait"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name="com.app.mg.aoe.upc.Activities.NetworkListActivity"
            android:screenOrientation="portrait"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name="com.app.mg.aoe.upc.Activities.ControlWsActivity"
            android:screenOrientation="portrait"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name="com.app.mg.aoe.upc.Activities.RoomActivity"
            android:screenOrientation="portrait"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name="com.app.mg.aoe.upc.Activities.RoomFinishActivity"
            android:screenOrientation="portrait"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name="com.app.mg.aoe.upc.Activities.ReadQRActvity"
            android:screenOrientation="portrait"
            tools:ignore="InnerclassSeparator" />

    </application>

</manifest>